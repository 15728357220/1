#include <studio.h>

int main()
{
    int a = 0;  //4个字节，32个bit位
    int b = ~a; //b是有符号的整型
    //~ -- 按(2进制)位取反
    //00000000000000000000000000000000
    //11111111111111111111111111111111
    //原码、反码、补码
    //负数在内存中存储的时候，存储的是二进制的补码
    printf("%d\n", b);//使用的，打印的是这个数的原码
    
    return 0;
}



int main()
{
    int a = 10;
    //int b = a++; //后置++，先使用，再++
    int b = ++a; //前置++，先++，再使用
    printf("a = %d b = %d\n", a, b); //11 11
    
    return 0;
}
